  "flow": {
    "conditions": [
      {
        "title": {
          "en": "Outdoor temperature greater than...",
          "nl": "Buiten temperatuur groter dan..."
        },
        "titleFormatted": {
          "en": "Outdoor temperature greater than [[temp]]°C",
          "nl": "Buiten temperatuur groter dan [[temp]]°C"
        },
        "args": [
          {
            "type": "number",
            "name": "temp",
            "placeholder": {
              "en": "0",
              "nl": "0"
            },
            "min": -50,
            "max": 50,
            "step": 0.5
          }
        ],
        "id": "outdoor-temp-greater-than"
      },
      {
        "title": {
          "en": "Outdoor temperature less than...",
          "nl": "Buitentemperatuur minder dan..."
        },
        "titleFormatted": {
          "en": "Outdoor temperature less than [[temp]]°C",
          "nl": "Buitemtemperatuur minder dan [[temp]]°C"
        },
        "args": [
          {
            "type": "number",
            "name": "temp",
            "placeholder": {
              "en": "0"
            },
            "min": -50,
            "max": 50,
            "step": 0.5
          }
        ],
        "id": "outdoor-temp-less-than"
      }
    ],
    "actions": [
      {
        "title": {
          "en": "Set SG-Ready state to...",
          "nl": "Zet de SG-Ready status naar..."
        },
        "titleFormatted": {
          "en": "Set the SG-Ready state to [[status]]",
          "nl": "Zet de SG-Ready status naar [[status]]"
        },
        "args": [
          {
            "type": "dropdown",
            "name": "status",
            "placeholder": {
              "en": "normal",
              "nl": "normal"
            },
            "values": [
              {
                "id": "normal",
                "label": {
                  "en": "Normal",
                  "nl": "Normaal"
                }
              },
              {
                "id": "boost",
                "label": {
                  "en": "Boost",
                  "nl": "Boost"
                }
              },
              {
                "id": "off",
                "label": {
                  "en": "Off",
                  "nl": "Uit"
                }
              },
              {
                "id": "maximum",
                "Label": {
                  "en": "Maximum",
                  "nl": "Maximaal"
                }
              }
            ]
          }
        ],
        "id": "set-smartgrid"
      }
    ],
    "triggers": [
      {
        "id": "boiler_lastcode_changed",
        "title": {
          "en": "Heatpum last code changed",
          "nl": "Warmtepomp laatste error veranderd"
        },
        "tokens": [
          {
            "type": "string",
            "name": "boiler_lastcode",
            "title": {
              "en": "Last code",
              "nl": "Laatste error"
            },
            "example": {
              "en": "A01 (5448)"
            }
          }
        ],
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=boiler"
          }
        ]
      },
      {
        "id": "boiler_dhw_curtemp_less_than",
        "title": {
          "en": "Tap water temp less than",
          "nl": "Drinkwater temperatuur minder dan"
        },
        "titleFormatted": {
          "en": "Tap water temp less than [[boiler_dhw_curtemp]]°C",
          "nl": "Drinkwater temperatuur minder dan [[boiler_dhw_curtemp]]°C"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=boiler"
          },
          {
            "type": "range",
            "name": "boiler_dhw_curtemp",
            "min": 0,
            "max": 100,
            "step": 1
          }
        ],
        "tokens": [
          {
            "type": "number",
            "name": "boiler_dhw_curtemp",
            "title": {
              "en": "Temperature"
            },
            "example": {
              "en": "50"
            }
          }
        ]
      },
      {
        "id": "thermostat_hc1_hpoperatingstate_changed",
        "title": {
          "en": "Heatpump operating state changed",
          "nl": "Warmtepomp operationele status veranderd"
